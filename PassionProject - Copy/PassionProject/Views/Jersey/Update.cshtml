@model PassionProject.Models.Jersey

@{
    ViewBag.Title = "Update";
}

<h2>Update <span class="text-muted">@Model.jerseyName</span></h2>

<form method="post" action="/Jersey/Update/@Model.jerseyId" class="p-5" style="max-width: 75%; margin:auto;">
    <div class="form-row">
        <div class="form-group col">
            <label for="jerseyName">Name</label>
            <input type="text" class="form-control" name="jerseyName" style="max-width: 100%" value="@Model.jerseyName" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="jerseyDescription">Description</label>
            <textarea name="jerseyDescription" class="form-control" style="max-width:100%; height:150px;">
                @Model.jerseyDescription
            </textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="jerseySize">Size</label>
            <input type="text" class="form-control" name="jerseySize" style="max-width: 30% " value="@Model.jerseySize"/>
        </div>

        <div class="form-group col">
            <label for="jerseyPrice">Price</label>
            <input type="text" class="form-control" name="jerseyPrice" style="max-width: 40%" value="@Model.jerseyPrice"/>
        </div>
        <div class="form-group col">
            <label for="jerseyStock">Stock</label>
            <input type="text" class="form-control" name="jerseyStock" style="max-width: 30%" value="@Model.jerseyStock" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Update Jersey" class="btn btn-success" />
            <a href="/Jersey/List" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>
