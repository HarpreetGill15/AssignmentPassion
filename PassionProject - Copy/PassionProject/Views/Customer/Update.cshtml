@model PassionProject.Models.Customer
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<form method="post" action="/Customer/Update/@Model.customerId" class="p-5" style="max-width: 75%; margin:auto;">
    <div class="form-row">
        <div class="form-group col">
            <label for="customerFirstName">First Name</label>
            <input type="text" class="form-control" name="customerFirstName" style="max-width: 100%" value="@Model.customerFirstName"/>
        </div>
        <div class="form-group col">
            <label for="customerLastName">Last Name</label>
            <input type="text" class="form-control" name="customerLastName" style="max-width: 100%" value="@Model.customerLastName"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="customerEmail">Email</label>
            <input type="text" class="form-control" name="customerEmail" style="max-width: 100%" value="@Model.customerEmail"/>
        </div>

        <div class="form-group col-md-6">
            <label for="customerPhone">Phone Number</label>
            <input type="text" class="form-control" name="customerPhone" style="max-width: 100%" value="@Model.customerPhone" />
        </div>
    </div>
    <div class="form-group">
        <label for="customerAddress">Address</label>
        <input type="text" class="form-control" name="customerAddress" style="max-width: 100%" value="@Model.customerAddress" />
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Postal Code</label>
            <input type="text" class="form-control" name="customerPostalCode" value="@Model.customerPostalCode" />
        </div>

        <div class="form-group col-md-6">
            <label>Country</label>
            <input type="text" class="form-control" name="customerCountry" style="max-width: 100%" value="@Model.customerCountry" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-success" />
            <a href="/Customer/List" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>
