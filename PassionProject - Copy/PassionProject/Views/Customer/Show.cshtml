@model PassionProject.Models.ViewModels.ShowCustomer
@{
    ViewBag.Title = "Show";
}

<h2>View Customer <span class="text-muted">#@Model.Customer.customerId</span></h2>

<div class="card" style="width:35%">
    <div class="card-header">
        @Model.Customer.customerFirstName @Model.Customer.customerLastName
    </div>
    <div class="card-body">
        <p>Email: <span class="font-italic">@Model.Customer.customerEmail</span></p>
        <p>Phone Number: <span class="font-italic">@Model.Customer.customerPhone</span></p>
        <p>Address: 
            <span class="font-italic">
                @Model.Customer.customerAddress
                @Model.Customer.customerPostalCode
                @Model.Customer.customerCountry
                </span>
</p>
    </div>
</div>
<h3>Orders</h3>
<div class="row">
    @{ 
        foreach(var order in Model.orders)
        {
        <div class="card p-1 m-1" style="width:20%">
            <div class="card-header">
                #@order.orderId

            </div>
            <p>Date: @order.orderDate</p>
            <p>Total: $@order.orderPrice</p>
            <a href="/Order/Show/@order.orderId" class="btn btn-info">View Order</a>
        </div>
        }
    }
</div>
<a href="/Customer/List" class="btn btn-primary">Back to Customers</a>