@model IEnumerable<PassionProject.Models.Order>

@{
    ViewBag.Title = "List";
}

<h2>List of Orders</h2>
<a href="/Order/Add" class="btn btn-success">Add Order</a>
<table class="table">
    <tr>
        <th>
            Order Id
        </th>
        <th>
            Customer Name
        </th>
        <th>
            Order Date
        </th>
        <th>
            Order Price
        </th>
        <th>

        </th>
    </tr>
    @{
        foreach(var item in Model){
            <tr>
                <td>
                    @item.orderId
                </td>
                <td>
                    @item.Customer.customerFirstName  @item.Customer.customerLastName
                </td>
                <td>
                    @item.orderDate
                </td>
                <td>
                    @item.orderPrice
                </td>
                <td>
                    <a href="/Order/Show/@item.orderId" class="btn btn-secondary">Edit</a>
                    <a href="/Order/DeleteOrder/@item.orderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    }
</table>

